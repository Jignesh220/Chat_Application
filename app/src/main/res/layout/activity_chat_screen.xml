        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/corner"
        android:fontFamily="@font/jacques_francois"
        android:text="Friendly Chat"
        android:textColor="#41C9E3"
        android:textSize="25sp"
        />

